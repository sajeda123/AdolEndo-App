<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Health Survey"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:backgroundTint="#89A6CA"
            />
        <Button
            android:id="@+id/btn_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Survey Result"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:backgroundTint="#89A6CA"
            />
        <Button
            android:id="@+id/btn_fqn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequently Asked Questions"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:backgroundTint="#89A6CA"
            />
        <Button
            android:id="@+id/btn_kba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Knowledge Base Articles"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:backgroundTint="#89A6CA"
            />
        <Button
            android:id="@+id/btn_saq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit A Question"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:backgroundTint="#89A6CA"
            />

        <Button
            android:id="@+id/btn_helpline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Helpline"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:backgroundTint="#89A6CA"
            />
        <Button
            android:id="@+id/btn_conWDoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect With Doctors"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:backgroundTint="#89A6CA"
            />
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/navigation_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff"
        android:id="@+id/nav"
        app:itemTextColor="@color/black"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>